<% if current_user %>
  <div class="loggedin">
    <p>Currently logged in as <% @user.full_name %></p>
    <%= link_to 'Log Out', session_path('current'), :method => :delete%>
  </div>
<% else %>
<div class="form_container">

  <div class="title">
      <p>SAMPLE SIGNUP FORM</p>
  </div>

  <div class="form">
    <%= form_for @user do |f| %>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :email %>
          <%= f.text_field :email, :id => 'email'%>
        </div>
      </div>

      <div class="hiddenfields hide">

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :name %>
            <%= f.text_field :full_name, :id => 'full_name' %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :company_name %>
            <%= f.text_field :company_name, :id => 'company_name' %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :company_size %>
            <%= f.text_field :company_size %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :phone_number %>
            <%= f.text_field :phone_number %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
        </div>

          <%= f.submit(:class => "button round") %>

      </div>

    <% end %>
  </div>

</div>

<%= form_tag scrape_info_url, method: "get", id: "scrape_form" do %>
  <%= text_field_tag(:count) %>
  <%= submit_tag("Send") %>
<% end %>

<% end %>
