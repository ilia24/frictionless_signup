<% if current_user %>
  <p>logged in</p>
  <%= link_to 'Log Out', session_path('current'), :method => :delete%>
<% else %>
<div class="form_container">

  <div class="title">
      <p>Sample Signup form</p>
  </div>

  <div class="form">
    <%= form_for @user do |f| %>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :email %><br>
          <%= f.text_field :email, :id => 'email'%>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :name %><br>
          <%= f.text_field :full_name, :id => 'full_name' %>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :company_name %><br>
          <%= f.text_field :company_name, :id => 'company_name' %>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :company_size %><br>
          <%= f.text_field :company_size %>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :phone_number %><br>
          <%= f.text_field :phone_number %>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <%= f.label :password %><br>
          <%= f.password_field :password %>
        </div>
      </div>

        <%= f.submit(:class => "button round") %>

    <% end %>
  </div>

</div>

<% end %>
